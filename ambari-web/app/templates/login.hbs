{{#unless isServerClientVersionMismatch}}
<div style="width:400px;max-width:400px;z-index:999999;margin-left:58%;margin-top: 17%;background: none;box-shadow: none;color: white;">
  <h2 style="font-size: 20px;color: white;text-align:center;width: 80%;padding-bottom: 15px;">欢迎登录</h2>
  {{#if errorMessage}}
  <div class="alert alert-danger" {{QAAttr "login-error"}}>
      无法登录。用户名/密码组合无效。
  </div>
  {{/if}}
  <form>

      <style>
          :focus, .btn:focus{
              outline:none;
          }
          .cus-ipt::-webkit-input-placeholder{
              color:#999;
          }
          #username{
              margin-bottom:0;height: 40px;color:#666;background: white; border: 0;
              padding-left: 6px;border-radius: 0 4px 4px 0;width:  80%;
          }
           #password{
              margin-bottom:0;height: 40px;color:#666;background: white;border: 0;
              padding-left: 6px;border-radius: 0 4px 4px 0;width:  80%;
          }
          .kn-login {
              height: 100%;
              min-height: 100%;
              background-repeat: no-repeat;
              background-image: url("/img/login.png");
              background-size: cover;
          }

      </style>
      <div class="form-group" style="margin-bottom:30px">
              <div class="input-group">
                  <span class="input-group-addon"  style="background-color:white;border:0"><i class="glyphicon glyphicon-user" style="color:#b1b1b1;"></i></span>
                  {{view view.loginTextField valueBinding="loginName" id="username"     class="form-control"   placeholder="请输入用户名" size="25"   disabledBinding="isSubmitDisabled" data-qa="username-input"}}
              </div>
          </div>

      <div class="form-group" style="margin-bottom:30px">
          <div class="input-group">
              <span class="input-group-addon" style="background-color:white;border:0"><i class="glyphicon glyphicon-lock" style="color:#b1b1b1;"></i></span>
              {{view view.passTextField type="password" valueBinding="password"   class="form-control"   placeholder="请输入密码" size="25" id="password"  disabledBinding="isSubmitDisabled" data-qa="password-input"}}
          </div>
      </div>



    <button  style="background-color:#579af5;border-radius:18px;color:white;height:40px;width: 328px;border:0;"  {{QAAttr "login-button"}} {{bindAttr disabled="isSubmitDisabled"}} {{action "submit" target="controller"}}>{{t login.loginButton}}</button>


  </form>
</div>
{{/unless}}
