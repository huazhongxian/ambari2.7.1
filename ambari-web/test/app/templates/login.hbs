{{#unless isServerClientVersionMismatch}}


<div class="signin">

  	<div class="signin-head"><img src="img/logo.jpg" alt=""  ></div>
  {{#if errorMessage}}
  <div class="alert alert-danger">
    {{errorMessage}}
  </div>
  {{/if}}
  <form  class="form-signin" >
    <div class="form-group">

      {{view view.loginTextField valueBinding="loginName" class="form-control"  placeholder="请输入用户名" disabledBinding="isSubmitDisabled"}}
    </div>
    <div class="form-group">

      {{view view.passTextField type="password" valueBinding="password" class="form-control" placeholder="请输入密码" disabledBinding="isSubmitDisabled"}}
    </div>
   	<button class="btn btn-lg btn-warning btn-block"  {{bindAttr disabled="isSubmitDisabled"}} {{action "submit" target="controller"}}>{{t login.loginButton}}</button>


  </form>


</div>
{{/unless}}
